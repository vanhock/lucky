{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost/",
  "description": "Quick find website layout errors and share it",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/content_scripts/main-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/16.png",
      "19": "icons/19.png",
      "38": "icons/38.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "web_accessible_resources": [
    "icons/*.png"
  ],
  "version": "0.1.0"
}